<UserControl x:Class="Cafe_Kiosk.Views.CartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Kiosk.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="720">
    <Grid Margin="10"
          Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--Cart List-->
        <ListView Grid.Column="0"
                  Background="#E6D3B3"
                  Margin="5"
                  ScrollViewer.CanContentScroll="False"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  ItemsSource="{Binding CartItems}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--Image-->
                        <Border Grid.Column="0"
                                Width="60" Height="60"
                                Background="#FAF3E0"
                                CornerRadius="4"
                                Margin="5"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                            <Image Source="{Binding MenuItem.Image}"
                                   Stretch="Uniform"/>
                        </Border>
                        
                        <!--Menu-->
                        <StackPanel Grid.Column="1"
                                    Margin="10 0">
                            <TextBlock Text="{Binding MenuItem.Name}"
                                       FontWeight="Bold"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding MenuItem.Price, StringFormat={}{0:N0}원}"
                                       FontSize="12"
                                       Foreground="Gray"/>
                            <TextBlock Text="{Binding Quantity, StringFormat='개수: {0:N0}개'}"
                                       FontSize="12"/>
                        </StackPanel>

                        <!--Option-->
                        <StackPanel Grid.Column="2"
                                    Margin="10 0">
                            <TextBlock Text="옵션"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0 0 0 5"/>
                            <TextBlock Text="{Binding DisplayCoffeeSize}"
                                       FontSize="12"
                                       Margin="0 1"/>
                            <TextBlock Text="{Binding DisplayShotCount}"
                                       FontSize="12"
                                       Margin="0 1"/>
                            <TextBlock Text="{Binding DisplayTemperatureWithIce}"
                                       FontSize="12"
                                       Margin="0 1"/>
                        </StackPanel>

                        <Grid Grid.Column="3"
                              Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                                
                            </Grid.RowDefinitions>
                            <!--Total Price-->
                            <TextBlock Grid.Row="0"
                                       Text="{Binding TotalPrice, StringFormat='총 금액: {0:N0}원'}"
                                       FontWeight="Bold"
                                       FontSize="13"
                                       Margin="0 3 0 0"/>
                            
                            <!--Buttons-->
                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="5 0">
                                <Button Content="-"
                                        Width="30"
                                        Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="+"
                                        Width="30"
                                        Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="삭제"
                                        Width="30"
                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--Payment Section-->
        <Grid Grid.Column="1"
              Background="#FAF3E0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Total Price-->
            <TextBlock Grid.Row="0"
                       Text="{Binding TotalCartPrice, StringFormat='총 결제 금액: {0:N0}원'}"
                       FontSize="18"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="5 10 5 5"/>

            <!--Payment Btn-->
            <Button Grid.Row="1"
                    Content="결제하기"
                    Width="200"
                    Margin="5"
                    Command="{Binding PayCommand}"/>

            <!--Clear Cart Btn-->
            <Button Grid.Row="2"
                    Content="전체 취소"
                    Width="200"
                    Margin="5"
                    Command="{Binding ClearCartCommand}"/>
        </Grid>
    </Grid>
</UserControl>
