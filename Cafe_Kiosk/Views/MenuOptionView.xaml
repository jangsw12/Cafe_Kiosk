<Window x:Class="Cafe_Kiosk.Views.MenuOptionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe_Kiosk.Views"
        mc:Ignorable="d"
        Title="MenuOptionView" 
        Height="960" Width="540"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="White"
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="Gray">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 이미지 자리 -->
            <Border Grid.Row="0"
                    Margin="5">
                <Image Source="{Binding ImageUri}" Stretch="Uniform" />
            </Border>

            <!-- 사이즈 선택 -->
            <GroupBox Header="사이즈" Grid.Row="1" Margin="0 0 0 10">
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <RadioButton Content="Small" GroupName="Size" Margin="10 0"
                             IsChecked="{Binding SelectedSize, ConverterParameter=Small, Converter={StaticResource EnumToBooleanConverter}}" />
                    <RadioButton Content="Medium" GroupName="Size" Margin="10 0"
                             IsChecked="{Binding SelectedSize, ConverterParameter=Medium, Converter={StaticResource EnumToBooleanConverter}}" />
                    <RadioButton Content="Large" GroupName="Size" Margin="10 0"
                             IsChecked="{Binding SelectedSize, ConverterParameter=Large, Converter={StaticResource EnumToBooleanConverter}}" />
                </StackPanel>-->
            </GroupBox>

            <!-- 시럽 추가 (1~3 개수) -->
            <GroupBox Header="시럽 추가" Grid.Row="2" Margin="0 0 0 10">
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <RadioButton Content="1" GroupName="SyrupCount" Margin="10 0"
                             IsChecked="{Binding SyrupCount, ConverterParameter=1, Converter={StaticResource IntToBooleanConverter}}" />
                    <RadioButton Content="2" GroupName="SyrupCount" Margin="10 0"
                             IsChecked="{Binding SyrupCount, ConverterParameter=2, Converter={StaticResource IntToBooleanConverter}}" />
                    <RadioButton Content="3" GroupName="SyrupCount" Margin="10 0"
                             IsChecked="{Binding SyrupCount, ConverterParameter=3, Converter={StaticResource IntToBooleanConverter}}" />
                </StackPanel>-->
            </GroupBox>

            <!-- 얼음량 조절 -->
            <GroupBox Header="얼음량" Grid.Row="3" Margin="0 0 0 10">
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <RadioButton Content="적게" GroupName="IceAmount" Margin="10 0"
                             IsChecked="{Binding SelectedIceAmount, ConverterParameter=Low, Converter={StaticResource EnumToBooleanConverter}}" />
                    <RadioButton Content="보통" GroupName="IceAmount" Margin="10 0"
                             IsChecked="{Binding SelectedIceAmount, ConverterParameter=Normal, Converter={StaticResource EnumToBooleanConverter}}" />
                    <RadioButton Content="많이" GroupName="IceAmount" Margin="10 0"
                             IsChecked="{Binding SelectedIceAmount, ConverterParameter=High, Converter={StaticResource EnumToBooleanConverter}}" />
                </StackPanel>-->
            </GroupBox>

            <!-- 수량 조절 -->
            <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0 10">
                <!--<Button Content="-" Width="30" Command="{Binding DecreaseQuantityCommand}" />
                <TextBlock Text="{Binding Quantity}" Width="40" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" Margin="5 0"/>
                <Button Content="+" Width="30" Command="{Binding IncreaseQuantityCommand}" />-->
            </StackPanel>

            <!-- 총 가격 표시 -->
            <TextBlock Grid.Row="5"
                       Text="총 가격 등 정보 표시창"/>

            <!--담기 / 취소 버튼-->
            <StackPanel Grid.Row="6"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="담기"
                        Width="120"
                        Command="{Binding AddMenuCommand}"/>
                <Button Content="취소"
                        Width="120"
                        Command="{Binding CancelMenuCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
