<Window x:Class="Cafe_Kiosk.Views.MenuOptionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe_Kiosk.Views" 
        xmlns:converters="clr-namespace:Cafe_Kiosk.Converters"
        mc:Ignorable="d"
        Height="1000" Width="720"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </Window.Resources>
    
    <Border Margin="10"
            Background="White"
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="Gray">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.3*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Image -->
            <Border Grid.Row="0"
                    Margin="5">
                <Image Source="{Binding ImageUri}" Stretch="Uniform" />
            </Border>

            <!--Size-->
            <GroupBox Grid.Row="1"
                      Header="사이즈"
                      Margin="0 0 0 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <RadioButton Grid.Row="0"
                                 GroupName="CoffeeSize"
                                 IsChecked="{Binding SelectedCoffeeSize, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Small}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="스몰"/>
                            <TextBlock Text=" ( + 0 )"
                                       Foreground="Gray"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Grid.Row="1"
                                 GroupName="CoffeeSize"
                                 IsChecked="{Binding SelectedCoffeeSize, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Tall}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="톨"/>
                            <TextBlock Text=" ( + 500 )"
                                       Foreground="Gray"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Grid.Row="2" 
                                 GroupName="CoffeeSize"
                                 IsChecked="{Binding SelectedCoffeeSize, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Large}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="라지"/>
                            <TextBlock Text=" ( + 1000 )"
                                       Foreground="Gray"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </RadioButton>
                </Grid>
            </GroupBox>

            <!--Syrup-->
            <GroupBox Grid.Row="2"
                      Header="시럽 추가 (여러 개 선택 가능)"
                      Margin="0 0 0 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Row="0"
                              Content="바닐라"
                              IsChecked="{Binding IsVanillaSelected}"/>
                    <CheckBox Grid.Row="1"
                              Content="카라멜"
                              IsChecked="{Binding IsCaramelSelected}"/>
                    <CheckBox Grid.Row="2"
                              Content="헤이즐넛"
                              IsChecked="{Binding IsHazelnutSelected}"/>
                </Grid>
            </GroupBox>
            
            <!--Ice Amount-->
            <GroupBox Grid.Row="3"
                      Header="얼음량 (가격 변동 없음)"
                      Margin="0 0 0 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <RadioButton Grid.Row="0"
                                 Content="없음"
                                 GroupName="IceAmount"
                                 IsChecked="{Binding SelectedIceAmount, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=None}"/>
                    <RadioButton Grid.Row="1" 
                                 Content="적게"
                                 GroupName="IceAmount"
                                 IsChecked="{Binding SelectedIceAmount, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Less}"/>
                    <RadioButton Grid.Row="2" 
                                 Content="보통"
                                 GroupName="IceAmount"
                                 IsChecked="{Binding SelectedIceAmount, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Regular}"/>
                    <RadioButton Grid.Row="3" 
                                 Content="많이"
                                 GroupName="IceAmount"
                                 IsChecked="{Binding SelectedIceAmount, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=More}"/>
                </Grid>
            </GroupBox>
           
            <!--Quantity-->
            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 10">
                <Button Content="-"
                        Width="30"
                        Command="{Binding DecreaseQuantityCommand}"/>
                <TextBlock Text="{Binding Quantity}"
                           Width="40"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Margin="5 0"/>
                <Button Content="+"
                        Width="30"
                        Command="{Binding IncreaseQuantityCommand}"/>
            </StackPanel>
            
            <!--Total Price-->
            <TextBlock Grid.Row="5"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Text="{Binding TotalPrice, StringFormat='총 금액: {0:N0}원'}"/>

            <!--담기 / 취소 버튼-->
            <StackPanel Grid.Row="6"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="담기"
                        Width="120"
                        Command="{Binding AddMenuCommand}"/>
                <Button Content="취소"
                        Width="120"
                        Command="{Binding CancelMenuCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
