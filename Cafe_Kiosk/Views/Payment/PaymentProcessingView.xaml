<UserControl x:Class="Cafe_Kiosk.Views.Payment.PaymentProcessingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Kiosk.Views.Payment" 
             xmlns:fa6="http://schemas.fontawesome.com/icons/svg"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="720">
    <Grid Background="Transparent"
          Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Loading Icon-->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Margin="0 40">
            <ProgressBar IsIndeterminate="True"
                         Width="250"
                         Height="15"
                         Foreground="#0078D7"/>

            <TextBlock Text="결제를 처리 중입니다..."
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       Margin="0 30 0 0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
