<UserControl x:Class="Cafe_Kiosk.Views.Payment.PaymentWaitingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Kiosk.Views.Payment" 
             xmlns:fa6="http://schemas.fontawesome.com/icons/svg"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="720">
    <Grid Background="Transparent"
          Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Info Text-->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Margin="0 40">
            <fa6:SvgAwesome Icon="Solid_CreditCard"
                            Width="60"
                            Height="60"
                            PrimaryColor="#0078D7"
                            Margin="0 0 0 20"/>
            
            <TextBlock Text="카드를 삽입하거나 리더기에 접촉해주세요."
                       FontSize="22"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       Foreground="Black"/>

            <ProgressBar IsIndeterminate="True"
                         Width="250"
                         Height="15"
                         Margin="0 30 0 0"
                         Foreground="#0078D7"/>

            <TextBlock Text="{Binding RemainingTimeText}"
                       FontSize="16"
                       Margin="0 20 0 0"
                       Foreground="#444"
                       TextAlignment="Center"/>
        </StackPanel>

        <!--Buttons-->
        <Button Grid.Row="1"
                Content="결제 취소"
                Width="150"
                Height="45"
                HorizontalAlignment="Right"
                Margin="0 10 10 10"
                Command="{Binding CancelCommand}"/>
    </Grid>
</UserControl>
