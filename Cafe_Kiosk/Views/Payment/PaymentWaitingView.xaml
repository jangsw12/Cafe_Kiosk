<UserControl x:Class="Cafe_Kiosk.Views.Payment.PaymentWaitingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cafe_Kiosk.Views.Payment" 
             xmlns:fa6="http://schemas.fontawesome.com/icons/svg"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="720">
    <Grid Background="Transparent"
          Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Info Text-->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Margin="0 40">
            <TextBlock Text="{Binding WaitingMessage}"
                       FontSize="22"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0 0 0 20"/>

            <ProgressBar IsIndeterminate="True"
                         Width="200"
                         Height="10"
                         Foreground="#0078D7"/>
        </StackPanel>

        <!--Buttons-->
        <Button Grid.Row="1"
                Width="100"
                Height="40"
                FontSize="16"
                HorizontalAlignment="Right"
                Margin="0 10 0 0"
                Visibility="Collapsed"
                Command="{Binding GoBackCommand}">
            <StackPanel Orientation="Horizontal">
                <fa6:SvgAwesome Icon="Solid_LeftLong"
                                Width="20" Height="20"
                                Margin="5 0"/>
                <TextBlock Text="이전 화면"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="15"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
